@{
}

@if (!string.IsNullOrWhiteSpace(ViewBag.Mensaje))
{
    @ViewBag.Mensaje

}

@if (!string.IsNullOrWhiteSpace(ViewBag.MensajeError))
{
    @ViewBag.MensajeError

}

<form asp-action="Create" asp-controller="Persona" method="post">
    <div class="row">
        <div class="col-md-2">
            Nombre
            @Html.TextBoxFor(x => x.Nombres)
        </div>
        <div class="col-md-2">
            Fecha Nacimiento
            @Html.TextBoxFor(x => x.FechaNacimiento, "{0:dd/MM/yyyy}", new { type = "date" })
        </div>
        <div class="col-md-2">
            Sueldo
            @Html.TextBoxFor(x => x.sueldo)
        </div>
        <div class="col-md-2">
            <button class="btn btn-success"> Agregar </button>
        </div>
    </div>
</form>